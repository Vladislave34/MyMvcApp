@model UserEditModel

@{
    ViewData["Title"] = "Редагування користувача";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow p-4" style="width: 450px;">
        <h3 class="text-center mb-4">Редагування користувача</h3>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">ПІБ</label>
                <input asp-for="FullName" class="form-control" placeholder="Введіть повне ім’я" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="example@gmail.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label>Завантажити фото</label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />

                <img src="@(string.IsNullOrEmpty(Model.Image) ? "/images/default.png" : $"/images/{Model.Image}")"
                     class="img-thumbnail mt-3"
                     style="width:120px;height:120px;object-fit:cover" />
            </div>

            <div class="mb-3">
                <label class="form-label">Ролі користувача</label>
                @if (Model.AllRoles != null && Model.AllRoles.Count > 0)
                {
                    <div class="border rounded p-2">
                        @foreach (var role in Model.AllRoles)
                        {
                            var isChecked = Model.Roles != null && Model.Roles.Contains(role);
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="Roles"
                                       value="@role"
                                       @(isChecked ? "checked" : null) />
                                <label class="form-check-label">@role</label>
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Назад</a>
                <button type="submit" class="btn btn-primary">Зберегти зміни</button>
            </div>
        </form>
    </div>
</div>